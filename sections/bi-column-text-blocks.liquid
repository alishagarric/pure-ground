{% style %}
    #Bi-column-text-blocks-{{ section.id }} {
      --topSpacingRatio: {{section.settings.top_spacing}} / 100;
      --bottomSpacingRatio: {{section.settings.bottom_spacing}} / 100;
    }
 {% endstyle %}

<div id="Bi-column-text-blocks-{{ section.id }}" class="bi-column-text-blocks color-{{section.settings.color_scheme}}">


    {% if section.settings.heading or section.settings.subheading %}
      <div class="bi-column-text-blocks__text__headings">
        {% if section.settings.heading %}
          <h2 class="bi-column-text-blocks__text__headings__heading">{{ section.settings.heading | escape }}</h2>
        {% endif %}
        {% if section.settings.subheading %}
          <h3 class="bi-column-text-blocks__text__headings__subheading h5">{{ section.settings.subheading }}</h3>
        {% endif %}
      </div>
    {% endif %}


    <div class="bi-column-text-blocks__text-blocks">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'text' -%}
            <div class="bi-column-text-blocks__block">
              {% if block.settings.heading %}
                <h3 class="bi-column-text-blocks__block__heading caption">{{ block.settings.heading }}</h3>
              {% endif %}
              {% if block.settings.content %}
                <p class="bi-column-text-blocks__block__text __article-txt">{{ block.settings.content }}</p>
              {% endif %}

              {% if block.settings.button_link and block.settings.button_label %}
                 {% render 'button', class: "bi-column-text-blocks", button_label: block.settings.button_label, button_link: block.settings.button_link, button_link: block.settings.button_color %}

              {% endif %}
            </div>
          {%- endcase -%}
      {%- endfor -%}
    </div>

</div>

{% schema %}
{
   "name":"Bi-Column Text Blocks",
   "tag":"section",
   "class":"section",
   "settings":[
      {
         "type":"header",
         "content":"Text Content"
      },
      {
         "type":"text",
         "id":"heading",
         "label":"Heading"
      },
      {
         "type":"text",
         "id":"subheading",
         "label":"Subheading"
      },
      {
         "type":"header",
         "content":"Settings"
      },
      {
         "type":"select",
         "id":"color_scheme",
         "options":[
            {
               "value":"cream",
               "label":"Cream (Default)"
            },
            {
               "value":"dark-cream",
               "label":"Dark Cream"
            },
            {
               "value":"grass",
               "label":"Grass"
            },
            {
               "value":"sun",
               "label":"Sun"
            },
            {
               "value":"ground",
               "label":"Ground"
            },
            {
               "value":"sky",
               "label":"Sky"
            },
            {
               "value":"tan",
               "label":"Tan"
            }
         ],
         "default":"cream",
         "label":"Color Scheme"
      },
      {
         "type":"range",
         "id":"top_spacing",
         "min":0,
         "max":100,
         "step":10,
         "unit":"%",
         "label":"Top Spacing",
         "default":50
      },
      {
         "type":"range",
         "id":"bottom_spacing",
         "min":0,
         "max":100,
         "step":10,
         "unit":"%",
         "label":"Bottom Spacing",
         "default":50
      }
   ],
   "blocks":[
      {
         "name":"Text Block",
         "type":"text",
         "settings":[
            {
               "type":"header",
               "content":"Text"
            },
            {
               "type":"text",
               "id":"heading",
               "label":"Heading",
               "default":"Heading"
            },
            {
               "type":"richtext",
               "id":"content",
               "label":"Text Content",
               "default":"<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut ullamcorper, tortor ut viverra pulvinar, orci tellus elementum odio, et malesuada neque diam vel sem. Curabitur lacus sem, commodo sed lacus id, vulputate tincidunt sapien.</p>"
            },
            {
               "type":"header",
               "content":"Button"
            },
            {
               "type":"text",
               "id":"button_label",
               "label":"Button Label"
            },
            {
               "type":"url",
               "id":"button_link",
               "label":"Button Link"
            },
            {
               "type":"select",
               "id":"button_color",
               "label":"Button Color",
               "default":"default",
               "options":[
                  {
                     "value":"default",
                     "label":"Default"
                  },
                  {
                     "value":"cream",
                     "label":"Cream"
                  },
                  {
                     "value":"dark-cream",
                     "label":"Dark Cream"
                  },
                  {
                     "value":"grass",
                     "label":"Grass"
                  },
                  {
                     "value":"sun",
                     "label":"Sun"
                  },
                  {
                     "value":"ground",
                     "label":"Ground"
                  },
                  {
                     "value":"sky",
                     "label":"Sky"
                  },
                  {
                     "value":"tan",
                     "label":"Tan"
                  }
               ]
            }
         ]
      }
   ],
   "presets":[
      {
         "name":"Bi-Column Text Blocks",
         "blocks":[
            {
               "type":"text"
            },
            {
               "type":"text"
            }
         ]
      }
   ]
}
{% endschema %}
