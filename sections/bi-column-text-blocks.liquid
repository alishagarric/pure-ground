          "label": "Text Content"
        },
        {
          "type": "header",
          "content": "Button"
        },       
        {
          "type": "text",
          "id": "button_label",
          "default": "Button label",
          "label": "Button Label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
        {
         "type": "select",
         "id": "button_color",
         "label": "Button Color",
         "options":[
            {
               "value":"cream",
               "label":"Cream (Default)"
            },
            {
               "value":"dark-cream",
               "label":"Dark Cream"
            },
            {
               "value":"grass",
               "label":"Grass"
            },
            {
               "value":"sun",
               "label":"Sun"
            },
            {
               "value":"ground",
               "label":"Ground"
            },
            {
               "value":"sky",
               "label":"Sky"
            },
            {
               "value":"tan",
               "label":"Tan"
            }
         ]
        }
      ]
    },
    {
      "name": "Icon / Badge",
      "type": "icon",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "alt",
          "default": "Image alt text",
          "label": "Alt"
        }
      ]
    }   
  ],
  "presets": [
    {
      "name": "Bi-Column Text Blocks"
    }
  ]
