{% style %}
    #Contact-form-{{ section.id }} {
      --topSpacingRatio: {{section.settings.top_spacing}} / 100;
      --bottomSpacingRatio: {{section.settings.bottom_spacing}} / 100;
    }
{% endstyle %}

<div id="Contact-form-{{ section.id }}" class="contact-form color-{{ section.settings.color_scheme }}">
    {% if section.blocks %}
      <form class="contact-form__form __form-styles" action="https://formspree.io/f/mnqwgrjp"  method="POST">
        <h2 class="contact-form__header h2">{{ section.settings.heading | escape }}</h2>

        {% assign requiredEmailUsed = false %}
        {% assign requiredBodyUsed = false %}
       
        {% if form.posted_successfully? %}
            Submitted successfully!
        {% else %}
            {{ form.errors | default_errors }}
        {% endif %}

        {% for block in section.blocks %}
          {%- case block.type -%}
            {%- when 'row' -%}
              <div class="contact-form__form__row">

                {% comment %} Gather name attribute for fields {% endcomment %}
                {% assign name1 = block.settings.placeholder-1 %}
                {% assign name2 = block.settings.placeholder-2 %}
                {% if block.settings.type-1 == "email" and requiredEmailUsed == false %}
                  {% assign name1 = "email" %}
                  {% assign requiredEmailUsed = true %}
                {% endif %}
                {% if block.settings.type-2 == "email" and requiredEmailUsed == false %}
                  {% assign name2 = "email" %}
                  {% assign requiredEmailUsed = true %}
                {% endif %}

                {% comment %} The fields {% endcomment %}
                <input type="{{block.settings.type-1}}" name="contact[{{ name1 }}]" placeholder="{{block.settings.placeholder-1}}" value="{{ form.name1 }}" />
                <input type="{{block.settings.type-2}}" name="contact[{{ name2 }}]" placeholder="{{block.settings.placeholder-2}}" value="{{ form.name2 }}"  />
              </div>
            {%- when 'textarea' -%}
                {% comment %} Gather name attribute for field {% endcomment %}
                {% assign name = block.settings.placeholder %}
                {% if requiredBodyUsed == false %}
                  {% assign name = "body" %}
                  {% assign requiredBodyUsed = true %}
                {% endif %}
              <textarea placeholder="{{block.settings.placeholder}}" name="contact[{{ name }}]" rows="8"></textarea>
          {% endcase %}
        {% endfor %}
        <input type="submit" value="Submit" />
        
        {% comment %}
          {%- if form.posted_successfully? -%}
            <div class="form-status form-status-list form__message" tabindex="-1" autofocus>{% render 'icon-success' %} {{ 'templates.contact.form.post_success' | t }}</div>
          {%- elsif form.errors -%}
            <div class="form__message">
              <h2 class="form-status caption-large text-body" role="alert" tabindex="-1" autofocus>{% render 'icon-error' %} {{ 'templates.contact.form.error_heading' | t }}</h2>
            </div>
            <ul class="form-status-list caption-large" role="list">
              <li>
                <a href="#ContactForm-email" class="link">
                  {{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}
                </a>
              </li>
            </ul>
          {%- endif -%}
        {% endcomment %}

        {% comment %}
        <div class="contact__fields">
          <div class="field">
            <input class="field__input" autocomplete="name" type="text" id="ContactForm-name" name="contact[{{ 'templates.contact.form.name' | t }}]" value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}" placeholder="{{ 'templates.contact.form.name' | t }}">
            <label class="field__label" for="ContactForm-name">{{ 'templates.contact.form.name' | t }}</label>
          </div>
          <div class="field field--with-error">
            <input
              autocomplete="email"
              type="email"
              id="ContactForm-email"
              class="field__input"
              name="contact[email]"
              spellcheck="false"
              autocapitalize="off"
              value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
              aria-required="true"
              {% if form.errors contains 'email' %}
                aria-invalid="true"
                aria-describedby="ContactForm-email-error"
              {% endif %}
              placeholder="{{ 'templates.contact.form.email' | t }}"
            >
            <label class="field__label" for="ContactForm-email">{{ 'templates.contact.form.email' | t }} <span aria-hidden="true">*</span></label>
            {%- if form.errors contains 'email' -%}
              <small class="contact__field-error" id="ContactForm-email-error">
                <span class="visually-hidden">{{ 'accessibility.error' | t }}</span>
                <span class="form__message">{% render 'icon-error' %}{{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}</span>
              </small>
            {%- endif -%}
          </div>
        </div>
        <div class="field">
          <input type="tel" id="ContactForm-phone" class="field__input" autocomplete="tel" name="contact[{{ 'templates.contact.form.phone' | t }}]" pattern="[0-9\-]*" value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}" placeholder="{{ 'templates.contact.form.phone' | t }}">
          <label class="field__label" for="ContactForm-phone">{{ 'templates.contact.form.phone' | t }}</label>
        </div>
        <div class="field">
          <textarea
            rows="10"
            id="ContactForm-body"
            class="text-area field__input"
            name="contact[{{ 'templates.contact.form.comment' | t }}]"
            placeholder="{{ 'templates.contact.form.comment' | t }}"
          >
            {{- form.body -}}
          </textarea>
          <label class="form__label field__label" for="ContactForm-body">{{ 'templates.contact.form.comment' | t }}</label>
        </div>
        <div class="contact__button">
          <button type="submit" class="button">
            {{ 'templates.contact.form.send' | t }}
          </button>
        </div>
        {% endcomment %}

      </form>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Contact Form",
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "Contact Form",
      "info": "You must add atleast one textarea row and one field of type 'email' in order for the contact form to subit successfully."
    },
    {
      "type": "text",
      "id": "heading",
      "default": "Contact form",
      "label": "Heading"
    },
    {
      "type": "header",
      "content": "Settings"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "cream",
          "label": "Cream (Default)"
        },
        {
          "value": "dark-cream",
          "label": "Dark Cream"
        },
        {
          "value": "grass",
          "label": "Grass"
        },
        {
          "value": "sun",
          "label": "Sun"
        },
        {
          "value": "ground",
          "label": "Ground"
        },
        {
          "value": "sky",
          "label": "Sky"
        },
        {
          "value": "tan",
          "label": "Tan"
        }
      ],
      "default": "cream",
      "label": "Color Scheme"
    },
        {
      "type": "header",
      "content": "Section Spacing"
    },
    {
      "type": "range",
      "id": "top_spacing",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "%",
      "label": "Top Spacing",
      "default": 50
    },
    {
      "type": "range",
      "id": "bottom_spacing",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "%",
      "label": "Bottom Spacing",
      "default": 50
    }
  ],
  "blocks": [
     {
       "name": "Row of Two Text Fields",
       "type": "row",
       "settings": [
         {
           "type": "text",
           "id": "placeholder-1",
           "label": "First Field Placeholder Text"
         },
         {
           "type": "radio",
           "id": "type-1",
           "label": "First Field Type",
           "options": [
              {
                "value": "text",
                "label": "Text"
              },
              {
                "value": "email",
                "label": "Email"
              }
            ],
            "default": "text"
         },
         {
           "type": "text",
           "id": "placeholder-2",
           "label": "Second Field Placeholder Text"
         },
         {
           "type": "radio",
           "id": "type-2",
           "label": "Second Field Type",
           "options": [
              {
                "value": "text",
                "label": "Text"
              },
              {
                "value": "email",
                "label": "Email"
              }
            ],
            "default": "text"
         }
       ]
     },
     {
       "name": "Textarea",
       "type": "textarea",
       "settings": [
          {
           "type": "text",
           "id": "placeholder",
           "label": "Placeholder"
         }
       ]
     }
  ],
  "presets": [
    {
      "name": "Contact Form"
    }
  ]
}
{% endschema %}