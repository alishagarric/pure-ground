{% style %}
    #Content-with-bg-image-{{ section.id }} {
      --topSpacingRatio: {{section.settings.top_spacing}} / 100;
      --bottomSpacingRatio: {{section.settings.bottom_spacing}} / 100;
      --topInternalSpacingRatio: {{section.settings.top_internal_spacing}} / 100;
      --bottomInternalSpacingRatio: {{section.settings.bottom_internal_spacing}} / 100;
      --overlayOpacity: calc({{section.settings.overlay}} / 100);
    }
 {% endstyle %}

<div id="Content-with-bg-image-{{ section.id }}" class="content-with-bg-image color-{{section.settings.color_scheme}} __align-{{section.settings.alignment}} __text-color-{{section.settings.text_color}} {% if section.settings.hero %}__as-hero{% endif %}">
   <div class="content-with-bg-image__inner">

      {% if section.settings.hero %}
         <h1 class="content-with-bg-image__heading {% if section.settings.heading_size %}{{section.settings.heading_size}}{% else %}h2{% endif %}">{{ section.settings.heading | escape }}</h1>
         {% if section.settings.subheading %}
            <h2 class="content-with-bg-image__subheading h5">{{ section.settings.subheading }}</h2>
         {% endif %}
      {% else %}
         <h2 class="content-with-bg-image__heading {% if section.settings.heading_size %}{{section.settings.heading_size}}{% endif %}">{{ section.settings.heading | escape }}</h2>
         {% if section.settings.subheading %}
            <h3 class="content-with-bg-image__subheading h5">{{ section.settings.subheading }}</h3>
         {% endif %}
      {% endif %}
      {% if section.settings.text %}
         <div class="content-with-bg-image__text">{{ section.settings.text }}</div>
      {% endif %}
      {% if section.settings.button_link and section.settings.button_label %}
            <a href="{{section.settings.button_link}}" class="content-with-bg-image__btn btn __btn-clr-{{section.settings.button_color}}">{{section.settings.button_label}}</a>
      {% endif %}
      {%- if section.settings.icon -%}
         <div class="content-with-bg-image__icon">
            {% render 'svg-plant' %} 
         </div>
      {%- endif -%}

      {%- if section.settings.image != blank -%}
         {% render 'next-gen-img', image: section.settings.image %}
      {%- endif -%}

   </div>
</div>

{% schema %}
{
   "name":"Content with Bg Image",
   "tag":"section",
   "class":"section",
   "settings":[
      {
         "type": "header",
         "content": "Text Content"
      },  
      {
         "type":"text",
         "id":"heading",
         "label":"Heading"
      },
      {
         "type":"text",
         "id":"subheading",
         "label":"Subheading"
      },
      {
        "type":"richtext",
        "id":"text",
        "label":"Text"
      },
      {
         "type": "select",
         "id": "heading_size",
         "options": [
            {
               "value": "h1",
               "label": "Large"
            },
            {
               "value": "h2",
               "label": "Large Alt"
            },
            {
               "value": "h3",
               "label": "Medium"
            }
         ],
         "default": "h2",
         "label": "Heading Size"
      },
      {
         "type": "select",
         "id": "text_color",
         "options": [
            {
               "value": "light",
               "label": "Light"
            },
            {
               "value": "dark",
               "label": "Dark"
            }
         ],
         "default": "light",
         "label": "Text Color"
      },
      {
         "type": "header",
         "content": "Button"
      },       
      {
         "type": "text",
         "id": "button_label",
         "default": "Button label",
         "label": "Button Label"
      },
      {
         "type": "url",
         "id": "button_link",
         "label": "Button Link"
      },
      {
         "type": "select",
         "id": "button_color",
         "label": "Button Color",
         "default": "default",
         "options":[
            {
               "value":"default",
               "label":"Default"
            },
            {
               "value":"cream",
               "label":"Cream"
            },
            {
               "value":"dark-cream",
               "label":"Dark Cream"
            },
            {
               "value":"grass",
               "label":"Grass"
            },
            {
               "value":"sun",
               "label":"Sun"
            },
            {
               "value":"ground",
               "label":"Ground"
            },
            {
               "value":"sky",
               "label":"Sky"
            },
            {
               "value":"tan",
               "label":"Tan"
            }
         ]
      },
      {
         "type": "header",
         "content": "Background Image"
      },  
      {
         "type": "image_picker",
         "id": "image",
         "label": "Image"
      },
      {
         "type": "range",
         "id": "overlay",
         "label": "Overlay Opacity",
         "info": "If above 0%, an overlay will be added on top of the image to create contrast behind the text.",
         "min": 0,
         "max": 70,
         "step": 10,
         "unit": "%",
         "default": 50
      },
      {
         "type": "header",
         "content": "Settings"
      },
      {
         "type": "checkbox",
         "id": "hero",
         "label": "Use as hero?",
         "info": "Should be selected if this section is the first or second on a page and contains the page title."
      },
      {
         "type":"radio",
         "id":"alignment",
         "label":"Alignment",
         "options":[
            {
               "value":"left",
               "label":"Left"
            },
            {
               "value":"center",
               "label":"Center"
            },
            {
               "value":"right",
               "label":"Right"
            }
         ],
         "default":"left"
      },
      {
         "type": "checkbox",
         "id": "icon",
         "label": "Include Icon?",
         "info": "Adds an icon to the right of the section."
      },
      {
         "type":"select",
         "id":"color_scheme",
         "options":[
            {
               "value":"cream",
               "label":"Cream (Default)"
            },
            {
               "value":"dark-cream",
               "label":"Dark Cream"
            },
            {
               "value":"grass",
               "label":"Grass"
            },
            {
               "value":"sun",
               "label":"Sun"
            },
            {
               "value":"ground",
               "label":"Ground"
            },
            {
               "value":"sky",
               "label":"Sky"
            },
            {
               "value":"tan",
               "label":"Tan"
            }
         ],
         "default":"cream",
         "label":"Color Scheme"
      },
      {
         "type": "header",
         "content": "Inernal Spacing"
      },
      {
         "type":"range",
         "id":"top_spacing",
         "min":0,
         "max":100,
         "step":10,
         "unit":"%",
         "label":"Top Spacing",
         "default":0
      },
      {
         "type":"range",
         "id":"bottom_spacing",
         "min":0,
         "max":100,
         "step":10,
         "unit":"%",
         "label":"Bottom Spacing",
         "default":0
      },
      {
         "type": "header",
         "content": "External Spacing"
      },
      {
         "type":"range",
         "id":"top_internal_spacing",
         "min":0,
         "max":100,
         "step":10,
         "unit":"%",
         "label":"Top Spacing",
         "default":100
      },
      {
         "type":"range",
         "id":"bottom_internal_spacing",
         "min":0,
         "max":100,
         "step":10,
         "unit":"%",
         "label":"Bottom Spacing",
         "default":100
      }
   ],
   "presets":[
      {
         "name":"Content with Bg Image"
      }
   ]
}

{% endschema %}
