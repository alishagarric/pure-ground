{% style %}
    #Content-with-bg-image-{{ section.id }} {
      --topSpacingRatio: {{section.settings.top_spacing}} / 100;
      --bottomSpacingRatio: {{section.settings.bottom_spacing}} / 100;
      --topInternalSpacingRatio: {{section.settings.top_internal_spacing}} / 100;
      --bottomInternalSpacingRatio: {{section.settings.bottom_internal_spacing}} / 100;
      --overlayOpacity: calc({{section.settings.overlay}} / 100);
    }

    {% if section.settings.nav_color == true %}
      .site-header:not(.__style-relative):not(.dropdown-open) {
         {% if section.settings.text_color == 'light' %}
            --color-foreground: var(--color-cream);
         {% endif %}
      }
    {% endif %}
 {% endstyle %}


<div id="Content-with-bg-image-{{ section.id }}" class="content-with-bg-image color-{{section.settings.color_scheme}} __align-{{section.settings.alignment}} __text-color-{{section.settings.text_color}} {% if section.settings.fullwidth %}__fullwidth{% endif %} {% if section.settings.accent_color %}__accent-color{% endif %}">
   <div class="content-with-bg-image__inner">

      {%- for block in section.blocks -%}
         {%- case block.type -%}

            {%- when 'caption' -%}
               <div class="content-with-bg-image__caption caption">{{ block.settings.caption }}</div>

            {%- when 'heading' -%}
               {% if section.settings.hero %}
                  <h1 class="content-with-bg-image__heading {% if block.settings.heading_size %}{{block.settings.heading_size}}{% else %}h2{% endif %}">{{ block.settings.heading | escape }}</h1>
               {% else %}
                  <h2 class="content-with-bg-image__heading {% if block.settings.heading_size %}{{block.settings.heading_size}}{% endif %}">{{ block.settings.heading | escape }}</h2>
               {% endif %}

            {%- when 'subheading' -%}
               {% if section.settings.hero %}
                  <h2 class="content-with-bg-image__subheading h5">{{ block.settings.subheading }}</h2>
               {% else %}
                  <h3 class="content-with-bg-image__subheading h5">{{ block.settings.subheading }}</h3>
               {% endif %}

            {%- when 'text' -%}
               <div class="content-with-bg-image__text __article-txt">{{ block.settings.text }}</div>

            {%- when 'button' -%}
                 {% render 'button', class: "content-with-bg-image", button_label: block.settings.button_label, button_link: block.settings.button_link, button_link: block.settings.button_color %}
         {%- endcase -%}
      {%- endfor -%}




      {%- if section.settings.image != blank -%}
         {% render 'next-gen-img', image: section.settings.image, alt: section.settings.alt %}
      {%- else -%}
         {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
      {%- endif -%}

   </div>
</div>

{% schema %}
{
   "name":"Content with Bg Image",
   "tag":"section",
   "class":"content-with-bg-image__wrapper",
   "settings":[
      {
         "type": "select",
         "id": "text_color",
         "options": [
            {
               "value": "light",
               "label": "Light"
            },
            {
               "value": "dark",
               "label": "Dark"
            }
         ],
         "default": "light",
         "label": "Text Color"
      },
      {
         "type": "checkbox",
         "id": "nav_color",
         "label": "Set the navigation's text color?",
         "info": "Have main navigation text color reflect text color selected above. If this is selected for multiple sections on the same page, only the last section's settings will apply."
      },
      {
         "type": "header",
         "content": "Background Image"
      },  
      {
         "type": "image_picker",
         "id": "image",
         "label": "Image"
      },
      {
         "type": "text",
         "id": "alt",
         "label": "Alt"
      },
      {
         "type": "range",
         "id": "overlay",
         "label": "Overlay Opacity",
         "info": "If above 0%, an overlay will be added on top of the image to create contrast behind the text.",
         "min": 0,
         "max": 70,
         "step": 10,
         "unit": "%",
         "default": 50
      },
      {
         "type": "header",
         "content": "Settings"
      },
      {
         "type": "checkbox",
         "id": "hero",
         "label": "Use as hero?",
         "info": "Should be selected if this section is the first or second on a page and contains the page title."
      },
      {
         "type": "checkbox",
         "id": "fullwidth",
         "label": "Fullwidth?",
         "default": true
      },
      {
         "type": "checkbox",
         "id": "accent_color",
         "label": "Add accent color?"
      },
      {
         "type":"radio",
         "id":"alignment",
         "label":"Alignment",
         "options":[
            {
               "value":"left",
               "label":"Left"
            },
            {
               "value":"center",
               "label":"Center"
            },
            {
               "value":"right",
               "label":"Right"
            }
         ],
         "default":"left"
      },
      {
         "type":"select",
         "id":"color_scheme",
         "options":[
            {
               "value":"cream",
               "label":"Cream (Default)"
            },
            {
               "value":"dark-cream",
               "label":"Dark Cream"
            },
            {
               "value":"grass",
               "label":"Grass"
            },
            {
               "value":"sun",
               "label":"Sun"
            },
            {
               "value":"ground",
               "label":"Ground"
            },
            {
               "value":"sky",
               "label":"Sky"
            },
            {
               "value":"tan",
               "label":"Tan"
            }
         ],
         "default":"cream",
         "label":"Color Scheme"
      },
      {
         "type": "header",
         "content": "External Spacing"
      },
      {
         "type":"range",
         "id":"top_spacing",
         "min":0,
         "max":100,
         "step":10,
         "unit":"%",
         "label":"Top Spacing",
         "default":0
      },
      {
         "type":"range",
         "id":"bottom_spacing",
         "min":0,
         "max":100,
         "step":10,
         "unit":"%",
         "label":"Bottom Spacing",
         "default":0
      },
      {
         "type": "header",
         "content": "Internal Spacing"
      },
      {
         "type":"range",
         "id":"top_internal_spacing",
         "min":0,
         "max":250,
         "step":10,
         "unit":"%",
         "label":"Top Spacing",
         "default":100
      },
      {
         "type":"range",
         "id":"bottom_internal_spacing",
         "min":0,
         "max":250,
         "step":10,
         "unit":"%",
         "label":"Bottom Spacing",
         "default":100
      }
   ],
   "blocks": [
   {
      "type": "caption",
      "name": "Caption",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "caption",
          "default": "Lorem ipsum",
          "label": "Caption"
        }
      ]
    },
    {
      "type": "heading",
      "name": "Heading",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Lorem ipsum dolor sit",
          "label": "Heading"
        },
        {
          "type": "select",
          "id": "heading_size",
          "options": [
            {
              "value": "h2",
              "label": "Large"
            },
            {
              "value": "h3",
              "label": "Medium"
            }
          ],
          "default": "h3",
          "label": "Heading Size"
        }
      ]
    },
   {
      "type": "subheading",
      "name": "Subheading",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "subheading",
          "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit",
          "label": "Subheading"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "limit": 1,
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip.</p>",
          "label": "Description"
        }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "default": "Button label",
          "label": "Button Label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
        {
         "type": "select",
         "id": "button_color",
         "label": "Button Color",
         "default": "default",
         "options":[
            {
               "value":"default",
               "label":"Default"
            },
            {
               "value":"cream",
               "label":"Cream"
            },
            {
               "value":"dark-cream",
               "label":"Dark Cream"
            },
            {
               "value":"grass",
               "label":"Grass"
            },
            {
               "value":"sun",
               "label":"Sun"
            },
            {
               "value":"ground",
               "label":"Ground"
            },
            {
               "value":"sky",
               "label":"Sky"
            },
            {
               "value":"tan",
               "label":"Tan"
            }
         ]
        }
      ]
    }
  ],
   "presets":[
      {
         "name":"Content with Bg Image"
      }
   ]
}

{% endschema %}
