      }
   ],
   "blocks":[
      {
         "type":"product",
         "name":"Product",
         "settings":[
            {
               "type":"product",
               "id":"product",
               "label":"Select Products"
            }
         ]
      }
   ],
   "presets":[
      {
         "name":"Featured Products"
      }
   ]
}
{% endschema %}
