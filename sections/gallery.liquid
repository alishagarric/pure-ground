{% style %}
  .gallery {
    --topSpacingRatio: {{section.settings.top_spacing}} / 100;
    --bottomSpacingRatio: {{section.settings.bottom_spacing}} / 100;
  }
{% endstyle %}

<div id="Gallery-{{ section.id }}" class="gallery color-{{section.settings.color_scheme}}">
  {%- for block in section.blocks -%}
      {%- case block.type -%}            
        {%- when 'image' -%}
          <img
            srcset="{%- if block.settings.image.src.width >= 165 -%}{{ block.settings.image.src | img_url: '165x' }} 165w,{%- endif -%}
              {%- if block.settings.image.src.width >= 360 -%}{{ block.settings.image.src | img_url: '360x' }} 360w,{%- endif -%}
              {%- if block.settings.image.src.width >= 533 -%}{{ block.settings.image.src | img_url: '533x' }} 533w,{%- endif -%}
              {%- if block.settings.image.src.width >= 720 -%}{{ block.settings.image.src | img_url: '720x' }} 720w,{%- endif -%}
              {%- if block.settings.image.src.width >= 1000 -%}{{ block.settings.image.src | img_url: '1000x' }} 1000w,{%- endif -%}
              {%- if block.settings.image.src.width >= 1500 -%}{{ block.settings.image.src | img_url: '1500x' }} 1500w,{%- endif -%}
              {{ block.settings.image.src | img_url: 'master' }} {{ block.settings.image.src.width }}w"
            src="{{ block.settings.image.src | img_url: '533x' }}"
            sizes="100vw"
            alt="{{ block.settings.image.src.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.image.width }}"
            height="{{ block.settings.image.height }}"
          >
      {%- endcase -%}
    {%- endfor -%}
</div>

{% schema %}
{
  "name": "Gallery",
  "tag": "section",
  "class": "section",
  "settings": [
     {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "cream",
          "label": "Cream (Default)"
        },
        {
          "value": "dark-cream",
          "label": "Dark Cream"
        },
        {
          "value": "grass",
          "label": "Grass"
        },
        {
          "value": "sun",
          "label": "Sun"
        },
        {
          "value": "ground",
          "label": "Ground"
        },
        {
          "value": "sky",
          "label": "Sky"
        },
        {
          "value": "tan",
          "label": "Tan"
        }
      ],
      "default": "cream",
      "label": "Color Scheme"
    },
     {
      "type": "range",
      "id": "top_spacing",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "%",
      "label": "Top Spacing",
      "default": 50
    },
    {
      "type": "range",
      "id": "bottom_spacing",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "%",
      "label": "Bottom Spacing",
      "default": 50
    }
  ],
  "blocks": [
    {
      "name": "Image",
      "type": "image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "alt",
          "default": "Image alt text",
          "label": "Alt"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Gallery"
    }
  ]
}
{% endschema %}
