{% style %}
    #Split-text-{{ section.id }} {
      --topSpacingRatio: {{section.settings.top_spacing}} / 100;
      --bottomSpacingRatio: {{section.settings.bottom_spacing}} / 100;
    }
 {% endstyle %}

<div id="Split-text-{{ section.id }}" class="split-text color-{{section.settings.color_scheme}}">
   {% if section.settings.heading %}
      <h2 class="split-text__heading h4">{{ section.settings.heading }}</h2>
   {% endif %}
   <div class="split-text__content __article-txt">
      {% if section.settings.text %}
         <div class="split-section__content__text">{{ section.settings.text }}</div>
      {% endif %}
      {%- if section.settings.button_label and section.settings.button_link -%}
         <a class="btn __btn-clr-{{section.settings.button_color}}" href="{{section.settings.button_link}}">{{section.settings.button_label}}</a>
      {%- endif -%}
   </div>
</div>



{% schema %}
{
  "name": "Split Text",
  "tag": "section",
  "class": "section",
  "settings": [
      {
         "type": "header",
         "content": "Text Content"
      },
      {
         "type":"text",
         "id":"heading",
         "label": "Heading",
         "default": "Heading"
      },
      {
         "type":"richtext",
         "id":"text",
         "label": "Text Content",
         "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi a ultricies metus. Mauris eleifend non arcu eu congue. 
