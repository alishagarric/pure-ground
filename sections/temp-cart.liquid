{% style %}
    #Temp-cart-{{ section.id }} {
      --topSpacingRatio: {{section.settings.top_spacing}} / 100;
      --bottomSpacingRatio: {{section.settings.bottom_spacing}} / 100;
    }
{% endstyle %}

{% assign image = "https://cdn.shopify.com/s/files/1/0562/9486/6967/articles/unsplash_pBwMdofMxtU_350x.jpg?v=1646062936" %}

}
<div id="Temp-cart-{{ section.id }}" class="temp-cart color-{{section.settings.color_scheme}}"  
>

  <h1>Your Cart</h1>

  <form>
    <div class="temp-cart__products">
      <div class="temp-cart__products__product">
        {% render 'next-gen-img', image: image %}
        <h2>Organic Basill</h2>
        <div>
          <span>5 lb</span>
          <span>Dried</span>
        </div>
        <input type="number" value="1" />
        <a href="/">Remove</a>
        <div>$19.99</div>
      </div>
    </div>

    <div class="temp-cart__total">
      <div>SUBTOTAL</div>
      <div>$19.99</div>
      <div>ESTIMATED SHIPPING</div>
      <div>FREE</div>
      <div>ESTIMATED TOTAL</div>
      <div>$19.99</div>

      <input type="submit" value="CHECK OUT">
    </div>

  </form>

  <h2>You might also like:</h2>
  <div class="temp-cart__related-products">
    {% for i in (1..3) %}
      {% comment %} This hasn't been made yet, you'll have to make it. Similar to article-card.liquid. Use hardcoded data for now {% endcomment %}
      {% render 'product-card' %} 
    {% endfor %}
  </div>

</div>

{% schema %}
{
  "name": "Temp Cart",
  "tag": "section",
  "class": "temp-cart__wrapper",
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "cream",
          "label": "Cream (Default)"
        },
        {
          "value": "dark-cream",
          "label": "Dark Cream"
        },
        {
          "value": "grass",
          "label": "Grass"
        },
        {
          "value": "sun",
          "label": "Sun"
        },
        {
          "value": "ground",
          "label": "Ground"
        },
        {
          "value": "sky",
          "label": "Sky"
        },
        {
          "value": "tan",
          "label": "Tan"
        }
      ],
      "default": "cream",
      "label": "Color Scheme"
    },
    {
      "type": "header",
      "content": "Section Spacing"
    },
    {
      "type": "range",
      "id": "top_spacing",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "%",
      "label": "Top Spacing",
      "default": 0
    },
    {
      "type": "range",
      "id": "bottom_spacing",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "%",
      "label": "Bottom Spacing",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "Temp Cart"
    }
  ]
}
{% endschema %}
