{% comment %}
  Renders the breadcrumb.

  Accepts:
  - text_style: {String} The text style
  - show_divider: {String} Show devider

  Usage:
  {% render 'breadcrumbs' %}
{% endcomment %}

{%- unless template.name == 'index' or template.name == 'cart' -%}
  <nav class="breadcrumb{% if text_style == 'uppercase' %} caption-with-letter-spacing{% elsif text_style == 'subtitle' %} subtitle{% endif %}{% if show_divider %} breadcrumb--divider{% endif %}" role="navigation" aria-label="breadcrumbs">
    {% if template.name == 'product' %}
      <a href="{{ routes.all_products_collection_url }}" class="link" title="{{ 'general.breadcrumbs.home_link_title' | t }}">All Ingredients</a>
    {% else %}
      <a href="{{ routes.root_url }}" class="link" title="{{ 'general.breadcrumbs.home_link_title' | t }}">{{ 'general.breadcrumbs.home' | t }}</a>
    {% endif %}

    {%- if template.name == 'product' -%}
      {%- if collection and collection.handle %}
        <span class="breadcrumb__divider" aria-hidden="true">く</span>
        {% capture url %}{{ routes.collections_url }}/{{ collection.handle }}{% endcapture %}
        {{ collection.title | link_to: url, class: "link" }}
      {%- endif %}
      
      <span class="breadcrumb__divider" aria-hidden="true">く</span>

      {{ product.title | link_to: "/", class: "link" }}

    {%- elsif template.name == 'collection' and collection.handle %}
      <span class="breadcrumb__divider" aria-hidden="true">く</span>

      {%- if current_tags -%}

        {% capture url %}{{ routes.collections_url }}/{{ collection.handle }}{% endcapture %}
        {{ collection.title | link_to: url, class: "link" }}

        <span class="breadcrumb__divider" aria-hidden="true">く</span>

        {%- for tag in current_tags -%}
          {%- liquid
            if tag contains "_"
              assign tag_starts_with = tag | slice: 0
              if tag_starts_with == "_"
                if tag_count
                  assign tag_count = tag_count | minus: 1 | at_least: 0
                endif
                continue
              endif
            endif

            assign tag_name = tag | strip
            assign tag_text = tag_name | capitalize
          -%}
          <span>{{ tag_text }}</span>

          {%- unless forloop.last -%}
            <span>+</span>
          {%- endunless -%}

        {%- endfor -%}
      {%- endif -%}

    {%- elsif template.name == 'blog' %}

      <span class="breadcrumb__divider" aria-hidden="true">く</span>
      {%- if current_tags %}
        {{ blog.title | link_to: blog.url, class: "link" }}
        <span class="breadcrumb__divider" aria-hidden="true">く</span>
        <span>{{ current_tags | join: " + " }}</span>
      {%- endif -%}

    {%- elsif template.name == 'article' %}

      <span class="breadcrumb__divider" aria-hidden="true">く</span>
      {{ blog.title | link_to: blog.url, class: "link" }}
      <span class="breadcrumb__divider" aria-hidden="true">く</span>

    {%- elsif template.name == 'page' %}

      <span class="breadcrumb__divider" aria-hidden="true">く</span>
      <span>{{ page.title }}</span>

    {%- elsif template.name == 'search' %}

      <span class="breadcrumb__divider" aria-hidden="true">く</span>
      <span>{{ page_title | replace: '*', '' }}</span>

    {%- else %}

      <span class="breadcrumb__divider" aria-hidden="true">く</span>
      <span>{{ page_title }}</span>

    {%- endif -%}
  </nav>
{%- endunless -%}
