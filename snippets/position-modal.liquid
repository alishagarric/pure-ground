{% comment %}
    Renders a modal containing details for open positions. Used in the open positions section.

    Expects:
    - position: {Object} Position object

    Usage:
    {% render 'position-modal', block.settings: block.settings %}
{% endcomment %}

<toggle-modal class="cmnc-modal color-cream" data-type="modal">
  <div class="cmnc-modal__content --position">
    <button class="cmnc-modal__exit">
      {% render 'svg-plus' %}
    </button>
    <div class="cmnc-modal__content__text">
      {% if position_heading %}
        <h2 class="h4">{{ position_heading }}</h2>
      {% endif %}
      {% if position_details %}
        <p>{{ position_details }}</p>
      {% endif %}
    </div>

  </div>
</toggle-modal>